CREATE TABLE wac_user_info (
  openid varchar(64) NOT NULL COMMENT '用户唯一id，微信分配',
  user_name varchar(128) NOT NULL COMMENT '用户昵称',
  orgid varchar(32) NOT NULL COMMENT '组织机构id',
  is_auth INT(2) NOT NULL default 0 COMMENT '是否授权标识0-未授权，1-已授权',
  email varchar(128) COMMENT '用户邮箱',
  phone varchar(128) COMMENT '用户手机号',
  search_id_list varchar(256) COMMENT '搜索历史记录',
  created_date DATETIME DEFAULT CURRENT_TIMESTAMP,
  updated_date timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  primary key(openid,created_date)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin;